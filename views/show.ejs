<!DOCTYPE html>
<html lang="en">
    <%- include ("./partials/head.ejs") %>
<body style="padding-top: 70px;">
    <%- include ("./partials/header.ejs") %>

    <h1 class="p-2 text-center"> <%=team.name.toUpperCase() %> </h1>
    
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card" >
                    <div class="card-header text-center" id="roster">
                        Roster:
                    </div>
                    <ul class="list-group list-group-flush">
                    <% team.roster.forEach(player => { %>
                        <li class="list-group-item text-center"><%= player %></li>  
                    <% }) %>
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-deck-horizontal text-center">
                    <% team.upcomingGames.forEach(game => { %>
                        <div class="card" >
                            <div class="card-body">
                                <h5 class="card-title">Upcoming Game</h5>
                                <p class="card-text"><%= game %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center" id="seasonStats">
                        Season Stats:
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li>Team wins: <%= team.wins %></li>
                            <li>Team losses: <%= team.losses %></li> 
                            <li>Highest Scorer: <%= team.highestScorer %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <form method="POST" action="/teams/<%= team.id %>?_method=DELETE">
            <input
            class="btn btn-danger"
            type="submit" value="DELETE"/>
        </form>

        <a href='/teams' >Back</a>
    </div>

    <%- include ("./partials/footer.ejs") %>
</body>
</html>
